<div class="container">
  <div class="row">
    <div class="col-8 mx-auto text-center mt-5">
      <h2 class="text-center">すきなことば</h2>
      <div class="message-flame mx-auto mt-5">
      <% @messages.each do |message| %>
        <%= message.text %>
      </div><br>
        <% if user_signed_in? %>
        <div id="message_<%= message.id %>">
          <%= render "public/favorites/favorite", message: message %>
        </div><br>
        <% end %>
      <% end %>
      <div class="click">
      <%= link_to "クリック", favorites_user_path(@user), class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  </div>
</div>