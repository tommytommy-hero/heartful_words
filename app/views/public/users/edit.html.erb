<div class="container">
  <div class="row">
    <div class="col-8 mx-auto text-center">
      <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :ニックネーム %><br>
        <%= f.text_field :name, class: "form-size" %>
      </div><br>
      <div class="form-btn text-center">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>