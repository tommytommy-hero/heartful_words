<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <div class="user-name text-center"><%= @user.name %></div>
      <p class="text-center">すきなことば
        <span>
          <%= link_to message_favorites_path(current_user) do %>
            <%= @user.favorites.count %>
          <% end %>
        </span>
      </p>
      <div class="text-center">
        <%= link_to "ユーザー編集", edit_user_path, class:"btn btn-primary btn-sm" %>
      </div><br>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-3 mx-auto text-center">
      <button type="button" class="btn btn-outline-success btn-lg"
      data-toggle="modal" data-target="#commentModal" data-whatever="@message">投稿</button>
      <%= render "public/messages/form", message: @message, tags: @tags %>
    </div>
  </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-8 mx-auto">
      <h4 class="text-center">じぶんのことば</h4>
      <div id="messages-list">
        <%= render "public/messages/show", messages: @messages, message: @message, tags: @tags %>
      </div>
      <div class="more text-center">
        <%= link_to_next_page @messages, 'もっと見る', remote: true, id: "view-more" %>
      </div>
    </div>
  </div>
</div>