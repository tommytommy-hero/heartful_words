<div class="container">
  <div class="row">
    <div>
      <%= form_with model: @tag, url: admin_tags_path do |f| %>
      <div class="field">
        <%= f.label :タグ %>
        <%= f.text_field :tagname, placeholder: "タグ名" %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
    <% if @tags.count != 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>タグ名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.tagname %></td>
          <td><%= link_to "編集", edit_admin_tag_path(tag.id), class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>
</div>